<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>upWebBusi_local</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>upWebKey</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring/upweb-spring-aop.xml
			classpath:spring/upweb-spring-common.xml
			classpath:spring/upweb-spring-business.xml
		</param-value>
	</context-param>
	<context-param>
		<param-name>logbackConfigLocation</param-name>
		<param-value>WEB-INF/classes/log/logback.xml</param-value>
	</context-param>
	<listener>
		<listener-class>com.umpay.upweb.system.action.UPWebContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.umpay.upweb.system.common.LogbackConfigListener</listener-class>
	</listener>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.dl</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring/upweb-spring-mvc.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	  <servlet>
        <servlet-name>jcaptcha</servlet-name>
        <servlet-class>com.umpay.upweb.servlet.ImageCaptchaServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.dl</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
 <servlet-mapping>
        <servlet-name>jcaptcha</servlet-name>
        <url-pattern>/jcaptcha</url-pattern>
    </servlet-mapping>
	<filter>
		<filter-name>webMobileIdFilter</filter-name>
		<filter-class>com.umpay.upweb.system.interceptor.WEBMobileIdFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>webMobileIdFilter</filter-name>
		<url-pattern>/web/order.do</url-pattern>
	</filter-mapping>
</web-app>